<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container">
<form action="/signup" method="POST">

<div class="form-group">
    <label>Username</label>
    <input type="text" name="username" placeholder="Enter your Username" class="form-control">

    <% let usernameError = ValidationError.find(err => err.param === "username") %>
    <% if(usernameError) {%>
      <p class="alert alert-danger">
          <%= usernameError.msg  %>
    </p>
    <% } %>
</div>

<div class="form-group">
    <label>Email</label>
    <input type="email" name="email" placeholder="Enter your email" class="form-control">
    <% let emailError = ValidationError.find(err => err.param === "email") %>
    <% if(emailError) {%>
      <p class="alert alert-danger">
          <%= emailError.msg  %>
    </p>
    <% } %>
</div>

<div class="form-group">
    <label>Pasword</label>
    <input type="password" name="password" placeholder="Enter your password" class="form-control">
    <% let passwordError = ValidationError.find(err => err.param === "password") %>
    <% if(passwordError) {%>
      <p class="alert alert-danger">
          <%= passwordError.msg  %>
    </p>
    <% } %>
</div>

<div class="form-group">
    <label>Confirm Pasword</label>
    <input type="password" name="ConfirmPassword" placeholder="Enter your password" class="form-control">
    <% let ConfirmPasswordError = ValidationError.find(err => err.param === "ConfirmPassword") %>
    <% if(ConfirmPasswordError) {%>
      <p class="alert alert-danger">
          <%= ConfirmPasswordError.msg  %>
    </p>
    <% } %>
</div>

<input type="submit" value="Registration" class="btn btn-primary position">

</form>
</div>

